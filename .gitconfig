[user]
	email = lyr-7d1h@pm.me
	name = Lyr
	signingkey = F0E576DC4C752710F168C87C650AC1B95E7FEE6E
[interactive]
	diffFilter = delta --color-only --features=interactive
[init]
	defaultBranch = master
[rebase]
	# Automatically squash fixup commits when rebasing
	autosquash = true
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = nvim
	pager = delta
[alias]
	# Create a fixup commit to a previous commit
	fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
	pushfii = "push --force-if-includes"
	pushfwl = "push --force-with-lease"
	staash = stash --all
	lgb = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%n' --abbrev-commit --date=relative --branches
# when merge conflict fixed before apply again
[rerere]
	enabled = true
[column]
	ui = auto
[includeIf "gitdir:~/b/"]
  path = .gitconfig-bit

[delta]
	navigate = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
