#!/usr/bin/env bash

if [[ "$1" == "" ]]; then
	echo "no file given"
	exit 1
fi

DEVICE=tun0

VPN_IP=`/sbin/ifconfig $DEVICE | grep 'inet ' | tr -s ' ' | cut -d " " -f 3`

echo "Redirecting to $VPN_IP"

for ip in $(cat $1 | cut -d " " -f1); do sudo ip route add $ip via $VPN_IP dev $DEVICE metric 1; done
